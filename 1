// Q1: Write a program to input two numbers and display their sum.
// Input 1: 3 4
// Output 1: Sum = 7
// Input 2: -1 20
// Output 2: Sum = 19

#include <stdio.h>

int main() {
    int num1, num2, sum;

    // Input two numbers
    scanf("%d %d", &num1, &num2);

    // Calculate and display the sum
    sum = num1 + num2;
    printf("Sum = %d\n", sum);

    return 0;
}



// Q2: Write a program to input two numbers and display their sum, difference, product, and quotient.
// Division by zero should be handled carefully.
// Input 1: 3 4
// Output 1: Sum = 7, Difference = -1, Product = 12, Quotient = 0.75
// Input 2: -1 20
// Output 2: Sum = 19, Difference = -21, Product = -20, Quotient = -0.05

#include <stdio.h>

int main() {
    float num1, num2;

    // Input two numbers
    scanf("%f %f", &num1, &num2);

    // Display sum, difference, product
    printf("Sum = %.2f\n", num1 + num2);
    printf("Difference = %.2f\n", num1 - num2);
    printf("Product = %.2f\n", num1 * num2);

    // Handle division by zero
    if (num2 != 0) {
        printf("Quotient = %.2f\n", num1 / num2);
    } else {
        printf("Division by zero is not allowed.\n");
    }

    return 0;
}

