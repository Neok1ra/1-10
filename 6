
// Q11: Write a program to input an integer and check whether it is even or odd using if–else.
// Input 1: 7
// Output 1: 7 is odd
// Input 2: 12
// Output 2: 12 is even

#include <stdio.h>

int main() {
    int num;
    
    scanf("%d", &num);
    if (num % 2 == 0) {
        printf("%d is even\n", num);
    } else {
        printf("%d is odd\n", num);
    }

    return 0;
}

// Q12: Write a program to input an integer and check whether it is positive, negative or zero using nested if–else.
// Input 1: -5
// Output 1: Negative
// Input 2: 0
// Output 2: Zero
// Input 3: 10
// Output 3: Positive

#include <stdio.h>

int main() {
    int num;

    scanf("%d", &num);

    if (num > 0) {
        printf("Positive\n");
    } else if (num < 0) {
        printf("Negative\n");
    } else {
        printf("Zero\n");
    }

    return 0;
}
